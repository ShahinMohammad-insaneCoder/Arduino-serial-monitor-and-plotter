<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="SwitchCompatTheme">
        <item name="colorControlActivated">#129517</item>
    </style>


    <style name="AlertDialogCustom" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textStyle">bold</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:typeface">normal</item>
        <item name="android:background">@color/colorwhite</item>
    </style>

    <style name="MatButtonSourceCode" parent="Theme.MaterialComponents">
        <item name="colorOnPrimary">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorwhite</item>
        <item name="colorOnSurface">@color/colorBlack</item>
    </style>
    <style name="TODO">
        <item name="colorAccent">@color/colorRefresh</item>
    </style>
</resources>